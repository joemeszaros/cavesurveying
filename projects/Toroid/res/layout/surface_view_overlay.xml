<!-- Demonstrates changing view visibility. See corresponding Java code. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
         Here is where we put the SurfaceView, in a frame so that we can
         stack other views on top of it.
    -->

    <TextView
        android:id="@+id/cavename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vadvizek-Ãºtja"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/vertices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vertices : 1456          Faces: 1414          Segments: 20" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <android.opengl.GLSurfaceView
            android:id="@+id/glsurfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/hidecontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/android_background"
                android:stretchColumns="1" >

                <TableRow >

                    <TextView
                        android:id="@+id/vertices2"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Start color" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:gravity="right"
                        android:padding="3dip"
                        android:src="@drawable/android_green" />
                </TableRow>

                <TableRow >

                    <TextView
                        android:id="@+id/vertices3"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="End color" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:gravity="right"
                        android:padding="3dip"
                        android:src="@drawable/android_blue" />
                </TableRow>

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:text="Random color" />

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow >

                    <TextView
                        android:id="@+id/vertices4"
                        android:layout_column="1"
                        android:padding="4dip"
                        android:text="Rotate speed" />

                    <EditText
                        android:id="@+id/editText1"
                        android:padding="3dip"
                        android:text="1.24" >

                        <requestFocus />
                    </EditText>
                </TableRow>

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:text="Rotate" />

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow >

                    <TextView
                        android:id="@+id/vertices5"
                        android:layout_column="1"
                        android:padding="5dip"
                        android:text="Zoom factor" />

                    <EditText
                        android:id="@+id/editText2"
                        android:padding="5dip"
                        android:text="1.3" >

                        <requestFocus />
                    </EditText>
                </TableRow>

                <CheckBox
                    android:id="@+id/checkBox2"
                   
                    android:text="Show info panel" />
            </TableLayout>

            <Button
                android:id="@+id/hideme1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hide_me"
                android:visibility="gone" />

            <Button
                android:id="@+id/hideme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hide_me"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

       <!--   <Button
            android:id="@+id/vis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings" /> -->
        <ImageButton
            android:padding="10dip"
            android:id="@+id/vis"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/android_settings_png" 
            android:text="Settings">
        </ImageButton>
        <ImageButton
            android:padding="10dip"
            android:id="@+id/invis"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/android_open_png" 
            android:text="Open">
        </ImageButton>

        <ImageButton
            android:padding="10dip"
            android:id="@+id/Button01"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/android_zoom_in_png" >
        </ImageButton>

        <ImageButton
            android:padding="10dip"
            android:id="@+id/Button02"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/android_zoom_out_png" >
        </ImageButton>

        <ImageButton
            android:padding="10dip"
            android:id="@+id/segment"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/android_segment_png" 
            android:text="Open">
        </ImageButton>
    </LinearLayout>

</LinearLayout>